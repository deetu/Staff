<%= form_for([@person, @person.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, rows: 6%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>