<h1>Listing people</h1>

<table>
  <tr>
    <th>Title</th>
    <th>First name</th>
    <th>Other names</th>
    <th>Surname</th>
    <th>Dob</th>
    <th>Date of employment</th>
    <th>Date of resignation</th>
    <th>Position</th>
    <th>Salary</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.title.name %></td>
    <td><%= person.first_name %></td>
    <td><%= person.other_names %></td>
    <td><%= person.surname %></td>
    <td><%= person.dob %></td>
    <td><%= person.date_of_employment %></td>
    <td><%= person.date_of_resignation %></td>
    <td><%= person.salary.department %></td>
    <td><%= number_to_currency(person.salary.salary, :unit => "&pound;") %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

